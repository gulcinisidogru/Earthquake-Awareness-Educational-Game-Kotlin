<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purple_gradient_bg">

    <LinearLayout
        android:id="@+id/quizArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/scoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skor: 0"
                android:textColor="#6A1B9A"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1" />

            <TextView
                android:id="@+id/progressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Soru: 1"
                android:textColor="#6A1B9A"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/questionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/result_card_bg"
            android:backgroundTint="#FFFFFF"
            android:elevation="8dp"
            android:gravity="center"
            android:minHeight="160dp"
            android:padding="20dp"
            android:text="Soru yÃ¼kleniyor..."
            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <LinearLayout
            android:id="@+id/optionsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button android:id="@+id/btnA" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginBottom="10dp" android:backgroundTint="#FFFFFF" android:textColor="#6A1B9A" android:textStyle="bold" android:textAllCaps="false" android:elevation="4dp" />
            <Button android:id="@+id/btnB" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginBottom="10dp" android:backgroundTint="#FFFFFF" android:textColor="#6A1B9A" android:textStyle="bold" android:textAllCaps="false" android:elevation="4dp" />
            <Button android:id="@+id/btnC" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginBottom="10dp" android:backgroundTint="#FFFFFF" android:textColor="#6A1B9A" android:textStyle="bold" android:textAllCaps="false" android:elevation="4dp" />
            <Button android:id="@+id/btnD" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginBottom="10dp" android:backgroundTint="#FFFFFF" android:textColor="#6A1B9A" android:textStyle="bold" android:textAllCaps="false" android:elevation="4dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/finalResultContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="24dp"
        android:background="@drawable/result_card_bg"
        android:elevation="15dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BÃ–LÃœM TAMAMLANDI!"
            android:textColor="#AB47BC"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/starContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <ImageView android:id="@+id/star1" android:layout_width="60dp" android:layout_height="60dp" android:src="@android:drawable/btn_star_big_on" app:tint="#FFCA28" />
            <ImageView android:id="@+id/star2" android:layout_width="80dp" android:layout_height="80dp" android:layout_marginHorizontal="10dp" android:src="@android:drawable/btn_star_big_on" app:tint="#FFCA28" />
            <ImageView android:id="@+id/star3" android:layout_width="60dp" android:layout_height="60dp" android:src="@android:drawable/btn_star_big_on" app:tint="#FFCA28" />
        </LinearLayout>

        <ImageView
            android:id="@+id/successBadge"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="10dp"
            android:src="@android:drawable/btn_star_big_on"
            app:tint="#FFD600" />

        <TextView
            android:id="@+id/finalScoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SKOR: 100"
            android:textColor="#6A1B9A"
            android:textSize="32sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#8E24AA"
            android:text="DEVAM ET"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/transitionArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/purple_gradient_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/characterCloseUp"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_marginBottom="20dp"
            android:elevation="10dp"
            android:src="@drawable/character_ali" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="25dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/transitionMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Harika bir iÅŸ Ã§Ä±kardÄ±n!"
                    android:textAlignment="center"
                    android:textColor="#424242"
                    android:textSize="19sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnNextActivity"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/main_button_bg"
            android:text="HAZIRIM! ðŸš€"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <nl.dionsegijn.konfetti.xml.KonfettiView
        android:id="@+id/konfettiView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>